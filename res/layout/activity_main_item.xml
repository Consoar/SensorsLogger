<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/activity_main_item_title"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/wifi_blue"
        android:padding="5dp"
        android:textSize="14sp" />

    <com.androidplot.xy.XYPlot
        android:id="@+id/activity_main_item_plot_sensor"
        android:layout_width="fill_parent"
        android:layout_height="240dp"
        android:layout_below="@+id/activity_main_item_switch"
        android:layout_centerHorizontal="true" />

    <Switch
        android:id="@+id/activity_main_item_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/activity_main_item_plot_sensor"
        android:gravity="center_horizontal"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/activity_main_item_label_x"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:text="X:"
            android:textColor="@color/white"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/activity_main_item_acc_x"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="left"
            android:paddingLeft="3dp"
            android:text="0.0000000"
            android:textColor="@color/white"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/activity_main_item_label_y"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:text="Y:"
            android:textColor="@color/white"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/activity_main_item_acc_y"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="left"
            android:paddingLeft="3dp"
            android:text="0.0000000"
            android:textColor="@color/white"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/activity_main_item_label_z"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:text="Z:"
            android:textColor="@color/white"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/activity_main_item_acc_z"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="left"
            android:paddingLeft="3dp"
            android:text="0.0000000"
            android:textColor="@color/white"
            android:textSize="12sp" />
    </LinearLayout>

</RelativeLayout>